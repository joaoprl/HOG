

public class Main {
   public static void main(String[] args) {
	   
	   String file = "tiger.jpg";
	   int nThreads = 8;
	   
       if(args.length == 1){
	        file = args[0];
       }
       if(args.length == 2){
    	   file = args[0];
    	   nThreads = Integer.getInteger(args[1], 8);
       }
       
       

       Hog hog = new Hog(file, nThreads);

       double[][][] histograms = hog.getHistograms();
       hog.getOutput(histograms);
       
   }
}
